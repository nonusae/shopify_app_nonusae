<script type="text/javascript">
  ShopifyApp.ready(function(){
    ShopifyApp.Bar.initialize({
      title: "Recurring Charge",
      icon: "<%= asset_path('favicon.png') %>"
    });
  });
</script>

<% if @shop_domain.present? %>
  <% if @charge_status == "accepted" %>

  <div class="container">
    <div class= "row centered">  
      <div class= "col-md-12 text-center">
         <h3>Thank you for installing our app.</h3>
          <h4>The 7-day trial period is now started</h4>
         <h4>You can click the button below to go to instructions page.</h4>
      </div>
    </div>  
    <div class= "row centered">
        <div class="col-md-12 text-center">
          <%= link_to "Go to instructions page",instructions_path(:shop => @shop_domain), class:"btn btn-primary" %>              
        </div>
    </div>
  </div>  


  <% elsif @charge_status == "decline"  %>


  <div class="container">
    <div class= "row centered">  
      <div class= "col-md-12 text-center">
      <h3>Please approve billing charge</h3>
      <br />
        Sorry, you have to approve charge before start using Product Tags Translator app.
        <br/ >
        The trial period is 7 day. You will not be charged until the trial period ends. 
      </div>
    </div>  
    <div class= "row centered">
        <div class="col-md-12 text-center">
          <%= link_to "Back to approve charge",root_path(:shop => @shop_domain), class:"btn btn-primary" %>              
        </div>
    </div>
  </div>

  <% end %>

<% end %>  


<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<% if @recurring_application_charge.present? && !@recurring_application_charge.try(:capped_amount) %>

  <% else %>
  
<% end %>
